<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.waity.api.mapper.videoMapper">
	<select id="selectVideoAll" resultType="com.waity.api.dto.videoDTO">
		SELECT
				*
		FROM
				yt_video
	</select>
	<select id="selectVideoById" resultType="com.waity.api.dto.videoDTO">
		SELECT
				*
		FROM
				yt_video
		WHERE
				id = #{id}
	</select>
	<select id="selectVideoByVideoId" resultType="com.waity.api.dto.videoDTO">
		SELECT
				*
		FROM
				yt_video
		WHERE
				video_id = #{videoId}
    </select>
    <insert id="insertVideo" parameterType="com.waity.api.dto.videoDTO">
		INSERT INTO yt_video (id, video_id, title, thumbnail)
		VALUES(
				#{id},
				#{videoId},
				#{title},
				#{thumbnail}
			  )
		ON DUPLICATE KEY UPDATE
				video_id = #{videoId},
				title = #{title},
				thumbnail = #{thumbnail}
    </insert>
    <select id="getLastId" resultType="int">
		select
				max(id)
		from
				yt_video
    </select>
	<update id="updateVideo" parameterType="com.waity.api.dto.videoDTO">
		update
				yt_video
		set
				video_id = #{videoId},
				title = #{title},
				thumbnail = #{thumbnail}
		where
				id = #{id}
	</update>
	<delete id="deleteVideo" parameterType="int">
		delete from
				yt_video
		where
				id = #{id}
	</delete>
</mapper>